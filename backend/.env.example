# Application
APP_NAME=TaskLeaf API
APP_VERSION=1.0.0
DEBUG=True

# Database
DATABASE_URL=postgresql://taskleaf:taskleaf123@db:5432/taskleaf_db

# JWT Secret (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-secret-key-here-generate-a-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Frontend URL (for OAuth redirects)
# For local development:
FRONTEND_URL=http://localhost:3000
# For production, set this to your production frontend URL:
# FRONTEND_URL=https://your-production-frontend.vercel.app

# OpenWeatherMap API
OPENWEATHER_API_KEY=your-openweather-api-key-here
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5

# Google OAuth (replace with your own credentials from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com
